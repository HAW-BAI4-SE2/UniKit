# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /login                   controllers.loginComponent.LoginController.showLogin()
POST        /login                   controllers.loginComponent.LoginController.login()
GET         /                        controllers.CourseRegistrationController.index()
GET         /courses/overview        controllers.CourseRegistrationController.showCourseOverview()
GET         /courses/register        controllers.CourseRegistrationController.showRegisterCourses()
POST        /courses/register        controllers.CourseRegistrationController.registerCourses()
GET         /courses/cancel          controllers.CourseRegistrationController.showCancelRegistration()
POST        /courses/cancel          controllers.CourseRegistrationController.cancelCourseRegistration()

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file            controllers.Assets.at(path="/public", file)
